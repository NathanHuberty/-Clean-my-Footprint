.content {
    padding-bottom: 70px;
}
.footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}

@media screen and (max-width: 767px) {
    .content {
        padding-bottom: 0;
    }
    .footer {
        position: relative;
        top: auto;
        left: auto;
        height: 70px;
    }
}

