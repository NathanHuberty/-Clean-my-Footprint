
<h3>Rentrez votre trajet</h3>

<%= simple_form_for @trip do |f| %>

  <%= f.input :start_address, placeholder: "Adresse de départ", error: 'Veuillez indiquer une adresse de départ', input_html: { class: "autocomplete-address" } %>
  <%= f.input :destination_address, placeholder: "Adresse d'arrivée", error: 'Veuillez indiquer une adresse d\'arrivée', input_html: { class: "autocomplete-address" } %>
  <%= f.association :transportation, error: 'Le moyen de transport doit faire partie de la liste fournie' %>
  <%= f.input :number, label: 'Nombre de voyages', placeholder: '1' %>
  <%= f.button :submit %>
<% end %>

